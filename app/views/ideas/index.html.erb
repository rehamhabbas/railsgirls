<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
<div class="row">
  <% group.compact.each do |idea| %>
  <div class="col-md-4">


    <%- if (Time.now - idea.created_at.time) < 5.minutes %>
    <%= image_tag(idea.picture_url, :width => '150px',:class =>'red img-circle') if idea.picture.present? %>
     <%  else %>
    <%= image_tag(idea.picture_url, :width => '150px',:class =>'img-circle') if idea.picture.present? %>
    <% end %>


    <h4><%= link_to idea.name, idea %></h4>
    <%= idea.description %>
  </div>
  <% end %>
</div>
<% end %>
